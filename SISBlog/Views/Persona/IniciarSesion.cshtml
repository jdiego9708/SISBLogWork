@model SISBlog.Models.Persona

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Scripts.Render("~/Scripts/modernizr-2.8.3.js")
</head>
<body>
    <div class="container center-block" id="log-in-form">
        <div class="heading">
            <h1>Ingresa con tu cuenta</h1>
        </div>
        <form action="~/">
            <div class="form-group">
                <input type="text" class="form-control" name="correo" placeholder="Correo electrónico">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Contraseña">
            </div>
            <div class="form-group form-group-btn">
                <button type="submit" class="btn btn-success btn-lg">Ingresar</button>
            </div>
            <div class="clearfix"></div>
        </form>
    </div>
    @Scripts.Render("~/Scripts/jquery-3.3.1.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    
</body>
</html>
