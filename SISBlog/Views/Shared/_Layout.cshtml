<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Felicidad en el trabajo</title>
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/Scripts/modernizr-2.8.3.js")
</head>
<body>
    <div class="container">
        <header>
            <h2 class="text-primary">Felicidad en el trabajo</h2>
        </header>
    </div>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Felicidad en el trabajo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "VerEntradas", "Entradas")</li>
                    <li>@Html.ActionLink("Quienes somos", "QuienesSomos", "Persona")</li>
                    <li>@Html.ActionLink("Contacto", "VerNuevaSolicitud", "Solicitud")</li>
                </ul>
                @*<form action="" class="navbar-form navbar-right" role="search">
                    <div class="form-group input-group">
                        <label class="sr-only" for="lblBuscar">Buscar</label>
                        <input type="text" class="form-control" placeholder="Buscar artículos">
                        <span class="input-group-btn"><button type="submit" class="btn btn-primary">Buscar</button></span>
                    </div>
                </form>*@
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["NombreUsuario"] != null)
                    {
                        <li>@Html.ActionLink("Usuario: " + Convert.ToString(Session["NombreUsuario"]), "PanelControl", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Iniciar sesión", "IniciarSesion", "Persona")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    @RenderBody()
    <div class="container body-content">
        <hr />
        <footer>
            <p>Copyright Juan Diego Duque - Soluciones informáticas</p>
        </footer>
    </div>

    @Scripts.Render("~/Scripts/jquery-3.3.1.js")
    @Scripts.Render("~/Scripts/CustomFunctions.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
